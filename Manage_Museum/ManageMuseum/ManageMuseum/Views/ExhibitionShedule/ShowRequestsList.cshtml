@{
    Layout = "~/Views/Shared/_SpaceManagerSharedLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowRequestsList</title>
</head>
<body>
<h1> Lista de eventos do tipo exposição para aprovação por um Space Manager </h1>
<h5> Um Evento requisitado por um Art Piece Manager é comunicado aos Space Managers para a sua aprovação</h5>
<br/><hr/>
<div class="container">
    <table class="table table-hover">
        <tr>
            <th> # </th><th> Name </th><th> Type </th><th> Start Date </th><th> End Date </th><th> Event Number </th>
        </tr>

        @foreach (var item in ViewBag.Data)
        {
            <tr>
                <td>
                    @Html.ActionLink(linkText: "View Details", actionName: "EventRequestDetails", controllerName: "ExhibitionShedule", routeValues: new { eventId = @item.Id }, htmlAttributes: null)
                  | @Html.ActionLink(linkText: "Approve", actionName: "EventRequestApprove", controllerName: "ExhibitionShedule", routeValues: new { eventId = @item.Id }, htmlAttributes: null)
                  @*| @Html.ActionLink(linkText: "Reject", actionName: "EventRequestReject", controllerName: "ExhibitionShedule", routeValues: new { eventId = @item.Id }, htmlAttributes: null)*@
                            </td>
                <td>@item.Name</td>
                <td>@item.EventType.Name</td>
                <td>@item.StartDate</td>
                <td>@item.EnDate</td>
                <td>@item.Id</td>
            </tr>
        }
    </table>
</div>
</body>
</html>
