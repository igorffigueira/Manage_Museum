@using System.Web.Mvc.Html
@model ManageMuseum.Models.EventViewModel
@{
    ViewBag.Title = "Marcar Eposições";
    Layout = "~/Views/Shared/_ArtPieceManegerSharedLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/OurCSS.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

<div class="container">
    @using (Html.BeginForm())
    {

            <div class="form-container">
                <div>
                    <label> Nome: </label>
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        <div class="form-container">
            <div>
                <label> Nome: </label>
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>           
            
            <div class="affix-row">
                <label> Data de inicio: </label>
                @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
            </div>

            <div class="affix-row">
                <label> Data de Fim: </label>
                @Html.EditorFor(model => model.EnDate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
            </div>

            <div class="form-group">
                <label>Lista de Espaços: </label><h6>Para selecionar múltiplas salas usar (CTRL + Click) </h6>

                @Html.ListBoxFor(model => model.SpacesList, (SelectList)ViewBag.ListSpaces, new { Multiple = "multiple", size=12, @class = "form-control" })
            </div>

            <label>Descrição:</label>
            @Html.TextAreaFor(model => model.Description, htmlAttributes: new { @class = "form-control", @rows = 5 })


            <div>
                <br /><input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    }
        
</div>
<div>
    <hr class="hrStyle">
    <p>
        @*@Html.ActionLink(linkText: "Back to the #################3", actionName: "ShowRequestsList")*@
    </p>
</div>

</body>
</html>
