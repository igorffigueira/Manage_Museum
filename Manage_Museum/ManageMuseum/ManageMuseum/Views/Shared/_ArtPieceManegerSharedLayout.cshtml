@{
    ViewBag.Title = "Art Piece Manager";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/OurCSS.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="row affix-row">
        <div class="col-sm-3 col-md-2 affix-sidebar">
            <div class="sidebar-nav">
                <div class="navbar navbar-default" role="navigation">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <span class="visible-xs navbar-brand">Art Piece Manager</span>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav" id="sidenav01">
                            <li class="active">
                                <a href="@Url.Action("Index","Home")" data-toggle="collapse" data-target="#toggleDemo0" data-parent="#sidenav01" class="collapsed">
                                    <h4>
                                        @ViewBag.Title
                                        <br>

                                    </h4>
                                </a>
                            </li>
                            <li>
                                <a href="#" class="collapsed">
                                    <span class="glyphicon glyphicon-map-marker"></span> Ver Mapa <span class="caret pull-right"></span>
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("ListArtPieces", "Catalog")">
                                    <span class="glyphicon glyphicon-list-alt"></span> Gerir Catálogo <span class="caret pull-right"></span>
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("SheduleExhibition","ExhibitionShedule")" class="collapsed">
                                    <span class="glyphicon glyphicon-calendar"></span> Requisitar Exposição <span class="caret pull-right"></span>
                                </a>

                            </li>
                            <li>
                                <a href="@Url.Action("ApprovedExhibition", "SheduleEvent")">
                                    <span class="glyphicon glyphicon-ok"></span> Exposições Aprovadas <span class="caret pull-right"></span>
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("ConfirmLogin", "Login")">
                                    <span class="glyphicon glyphicon-log-out"></span> LogOut <span class="caret pull-right"></span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-9 col-md-10 affix-content">
            @RenderBody()         
        </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>
