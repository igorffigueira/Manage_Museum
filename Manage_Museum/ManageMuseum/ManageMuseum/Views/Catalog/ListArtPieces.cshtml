
@{
    Layout = "~/Views/Shared/_ArtPieceManegerSharedLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListArtPieces</title>
    @Styles.Render("~/Content/OurCSS.css")
</head>
<body>
    <br/><h1 style="text-align:justify"> List of Art Pieces on Catalog</h1><hr/>
    <h4 style="text-align: center"> Poderá introduzir uma nova peça ao catálogo, remover uma peça de um evento e colocá-la em armazém ou ainda colocar numa sala de um evento  </h4><hr />
    <div class="container">
        <div>
            <hr/>
            <p style="text-align: center">@Html.ActionLink("Insert new Art Piece", "InsertArtPiece")</p>
            <hr />
        </div>
        <table class="table table-hover table-responsive">
            <tr>
                <th> # </th>
                <th>Art Piece Name</th>
                <th>Art Piece State</th>
                <th>Room</th>
                <th>Author</th>
                <th>Year</th>
                <th>Dimension</th>
                <th>Description</th>
            </tr>
            @foreach (var item in @ViewBag.Data)
            {
                if (@item.ArtPieceState.Name == "armazem")
                {

                    <tr>
                        <td class="table_td_center">
                            @Html.ActionLink(linkText: "Attach to event", actionName: "AttachPiece", controllerName: "Catalog", routeValues: new { artpieceId = @item.Id }, htmlAttributes: null)
                        </td>
                        <td class="table_td_center">@item.Name</td>
                        <td class="table_td_center">@item.ArtPieceState.Name</td>
                        <td class="table_td_center"> - </td>
                        <td class="table_td_center">@item.Author</td>
                        <td class="table_td_center">@item.Year</td>
                        <td class="table_td_center">@item.Dimension</td>
                        <td class="table_td_center">@item.Description</td>
                    </tr>

                }
                if (@item.ArtPieceState.Name == "exposicao")
                {
                    <tr>
                        <td class="table_td_center">@Html.ActionLink(linkText: "Remove form exihibition", actionName: "RemovePiece", controllerName: "Catalog", routeValues: new { artpieceId = @item.Id }, htmlAttributes: null)</td>
                        <td class="table_td_center">@item.Name</td>
                        <td class="table_td_center">@item.ArtPieceState.Name</td>
                        <td class="table_td_center">@item.RoomMuseum.Name</td>
                        <td class="table_td_center">@item.Author</td>
                        <td class="table_td_center">@item.Year</td>
                        <td class="table_td_center">@item.Dimension</td>
                        <td class="table_td_center">@item.Description</td>
                    </tr>
                }
            }

        </table>
    </div>
    <div>
        <hr class="hrStyle">
        <p>
            @Html.ActionLink(linkText: "Back to Home Page", actionName: "SheduleExhibition", controllerName: "ExhibitionShedule")
        </p><br/>
    </div>

</body>
</html>
