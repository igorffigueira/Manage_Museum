
@{
    ViewBag.Title = "AttachPiece";
    Layout = "~/Views/Shared/_ArtPieceManegerSharedLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <br/><h1 style="text-align:justify"> Titulo </h1><hr/>
    <h4 style="text-align: center"> SubTitulo </h4><hr/>

    <div class="container">

        <table class="table table-hover">
            <tr>
                <th>Art Piece Name</th>
                <th>Art Piece Location</th>
                <th>Author</th>
                <th>Year</th>
                <th>Dimension</th>
                <th>Description</th>
            </tr>

            @foreach (var item in ViewBag.Data)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.ArtPieceState.Name</td>
                    @*<td>@item.RoomMuseum.Name</td>*@ @*DESCOMENTAR DEPOIS DE TER O ATRIBUTO NAME NA TABELA ROOMMUSEUM*@
                    <td>@item.Author</td>
                    <td>@item.Year</td>
                    <td>@item.Dimension</td>
                    <td>@item.Description</td>
                    @*<td>
                        @Html.ActionLink(linkText: "View Details", actionName: "EventRequestDetails", controllerName: "ExhibitionShedule", routeValues: new { eventId = @item.Id }, htmlAttributes: null)
                    |   @Html.ActionLink(linkText: "Approve", actionName: "EventRequestApprove", controllerName: "ExhibitionShedule", routeValues: new { eventId = @item.Id }, htmlAttributes: null)
                    </td>*@
                </tr>
            }

        </table>
        <div>
            <hr/>
            <p>
                @Html.ActionLink("Inserir uma nova peça de arte", "InsertArtPiece")
            </p>
            <p>
                @Html.ActionLink("Retirar de uma exibição", "RemovePiece")
            </p>
            <p>
                @Html.ActionLink("Colocar numa exibição", "AttachPiece")
            </p>
        </div>
    </div>
    <div>
        <hr class="hrStyle">
        <p>
            @*@Html.ActionLink(linkText: "Back to ##################", actionName: "SheduleExhibition", controllerName: "ExhibitionShedule")*@
        </p><br />
    </div>

</body>
</html>